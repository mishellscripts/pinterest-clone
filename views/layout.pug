    include partials/header

    .container
      include partials/flash
      block content

    include partials/footer

    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
    script(src='/js/main.js')
    script(src='/js/lib/masonry.pkgd.min.js')